<div class="page-header">
  <h2>Password Reset</h2>
  <small>
    Enter your new password below.
  </small>
</div>

<div class="row">
  <div class="col-md-4">
    <%= form_for(@user, url: password_reset_path(@password_reset_token), html: { class: 'form', role: 'form' }) do |f| %>

      <%= f.hidden_field :email %>

      <%= render partial: 'shared/errors', locals: { model: @user } %>

      <div class="form-group">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, placeholder: 'New Password', class: 'form-control input-lg' %>
      </div>
      <div class="form-group">
        <%= f.button(type: 'submit', class: 'btn btn-primary btn-lg') do %>
          Reset Password
        <% end %>
      </div>
    <% end %>
  </div>
</div>
