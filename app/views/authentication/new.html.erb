<div class="page-header">
  <h2>Login</h2>
</div>

<div class="row">
  <div class="col-md-4">
    <%= form_for(@login, url: { action: 'create' }) do |f| %>
      <%= render partial: 'shared/errors', locals: { model: @login } %>
      <div class="form-group">
        <%= f.text_field :email, placeholder: 'Email', class: 'form-control input-lg' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control input-lg' %>
      </div>
      <div class="form-group">
        <%= f.button(type: 'submit', class: 'btn btn-primary btn-lg') do %>
          Login
        <% end %>
      </div>
    <% end %>
    <p>Don't have an account? <%= link_to 'Register', new_user_path %></p>
    <p><%= link_to 'Forgot password?', forgot_password_path %></p>
  </div>
</div>